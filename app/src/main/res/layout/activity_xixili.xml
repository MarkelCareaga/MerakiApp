<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityXixili"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".juegos.XixiliActivity">

    <ImageView
        android:id="@+id/gifAplausosXixili"
        android:layout_width="98dp"
        android:layout_height="100dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/aplausos" />

    <ImageView
        android:id="@+id/imgEnunciado"
        android:layout_width="394dp"
        android:layout_height="189dp"
        android:layout_marginTop="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/enunciado" />

    <ImageView
        android:id="@+id/imgTexto3"
        android:layout_width="400dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:tag="figura3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTexto1"
        app:srcCompat="@drawable/texto_enunciado_3" />

    <ImageView
        android:id="@+id/imgTexto3original"
        android:layout_width="362dp"
        android:layout_height="32dp"
        android:layout_marginTop="100dp"
        android:tag="figura3"
        app:layout_constraintEnd_toEndOf="@+id/imgEnunciado"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imgEnunciado"
        app:layout_constraintTop_toTopOf="@+id/imgEnunciado"
        app:srcCompat="@drawable/texto_enunciado_3" />

    <ImageView
        android:id="@+id/imgTexto1"
        android:layout_width="257dp"
        android:layout_height="27dp"
        android:layout_marginTop="20dp"
        android:tag="figura1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTextoMal1"
        app:srcCompat="@drawable/texto_enunciado_1" />

    <ImageView
        android:id="@+id/imgTexto1original"
        android:layout_width="221dp"
        android:layout_height="36dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="22dp"
        android:tag="figura1"
        app:layout_constraintEnd_toEndOf="@+id/imgEnunciado"
        app:layout_constraintHorizontal_bias="0.251"
        app:layout_constraintStart_toStartOf="@+id/imgEnunciado"
        app:layout_constraintTop_toTopOf="@+id/imgEnunciado"
        app:srcCompat="@drawable/texto_enunciado_1" />

    <ImageView
        android:id="@+id/imgTexto2"
        android:layout_width="402dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:tag="figura2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTexto4"
        app:srcCompat="@drawable/texto_enunciado_2" />

    <ImageView
        android:id="@+id/imgTexto2original"
        android:layout_width="353dp"
        android:layout_height="27dp"
        android:layout_marginTop="56dp"
        android:tag="figura2"
        app:layout_constraintEnd_toEndOf="@+id/imgEnunciado"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imgEnunciado"
        app:layout_constraintTop_toTopOf="@+id/imgEnunciado"
        app:srcCompat="@drawable/texto_enunciado_2" />

    <ImageView
        android:id="@+id/imgTexto4"
        android:layout_width="299dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:tag="figura4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTextoMal2"
        app:srcCompat="@drawable/texto_enunciado_4" />

    <ImageView
        android:id="@+id/imgTexto4original"
        android:layout_width="255dp"
        android:layout_height="26dp"
        android:layout_marginTop="148dp"
        android:tag="figura4"
        app:layout_constraintEnd_toEndOf="@+id/imgEnunciado"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imgEnunciado"
        app:layout_constraintTop_toTopOf="@+id/imgEnunciado"
        app:srcCompat="@drawable/texto_enunciado_4" />

    <ImageView
        android:id="@+id/imgTextoMal2"
        android:layout_width="356dp"
        android:layout_height="33dp"
        android:layout_marginTop="12dp"
        android:tag="figuramal2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTexto3"
        app:srcCompat="@drawable/texto_enunciado_mal_2" />

    <ImageView
        android:id="@+id/imgTextoMal1"
        android:layout_width="291dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:tag="figuramal1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgEnunciado"
        app:srcCompat="@drawable/texto_enunciado_mal_1" />

    <ImageButton
        android:id="@+id/btnVolverExplicacionXixili"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/estilo_botones_volver"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btnComprobarXixili"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/estilo_botones_resultado"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck,DuplicateClickableBoundsCheck" />

    <ImageButton
        android:id="@+id/btnFinalizarXixili"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/estilo_botones_finalizar"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btnInfoPantallaXixili"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/estilo_botones_superiores"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_rotacion_bloqueada"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btnAyudaXixili"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/estilo_botones_superiores"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/btnInfoPantallaXixili"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_ayuda"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>