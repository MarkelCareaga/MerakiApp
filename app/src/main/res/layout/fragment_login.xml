<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chat.LoginFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/input_name"
            android:layout_width="254dp"
            android:layout_height="0dp"
            android:layout_marginBottom="64dp"
            android:hint="Introduce tu nombre"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_group" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="26dp"
            android:paddingTop="16dp"
            android:text="Selecciona tu perfil:"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/professor_radio"
            app:layout_constraintEnd_toEndOf="@+id/student_radio"
            app:layout_constraintTop_toBottomOf="@+id/input_name" />

        <RadioGroup
            android:id="@+id/profile_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="87dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/input_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </RadioGroup>

        <Button
            android:id="@+id/accept_button"
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:layout_marginBottom="105dp"
            android:padding="16dp"
            android:text="Aceptar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/professor_radio" />

        <RadioButton
            android:id="@+id/professor_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="112dp"
            android:text="Profesor"
            app:layout_constraintBottom_toTopOf="@+id/accept_button"
            app:layout_constraintEnd_toStartOf="@+id/student_radio"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <RadioButton
            android:id="@+id/student_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:text="Alumno"
            app:layout_constraintBaseline_toBaselineOf="@+id/professor_radio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/professor_radio" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>