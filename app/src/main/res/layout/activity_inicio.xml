<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoSplash"
    tools:context=".Inicio">

    <ImageView
        android:id="@+id/imgLogoMeraki"
        android:layout_width="298dp"
        android:layout_height="235dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo"/>

    <Button
        android:id="@+id/btnLibre"
        android:layout_width="338dp"
        android:layout_height="72dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bordesredondos"
        android:backgroundTint="#95c799"
        android:elevation="00dp"
        android:text="@string/libre"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:icon="@drawable/halcon"
        app:iconTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnExplorador" />

    <Button
        android:id="@+id/btnExplorador"
        android:layout_width="338dp"
        android:layout_height="72dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/bordesredondos"
        android:backgroundTint="@android:color/holo_blue_light"
        android:elevation="00dp"
        android:text="@string/explorador"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:icon="@drawable/mapa"
        app:iconTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogoMeraki" />

    <Button
        android:id="@+id/btnDemo"
        android:layout_width="338dp"
        android:layout_height="72dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bordesredondos"
        android:backgroundTint="#EA6C45"
        android:text="@string/demo"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:icon="@drawable/img_modo_demo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAyudaInicio" />

    <Button
        android:id="@+id/btnAyudaInicio"
        android:layout_width="338dp"
        android:layout_height="72dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bordesredondos"
        android:backgroundTint="#EA6C45"
        android:text="@string/ayuda"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:icon="@drawable/logo_ayuda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLibre" />


</androidx.constraintlayout.widget.ConstraintLayout>